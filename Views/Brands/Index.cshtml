@model List<Brand>

@{
    ViewData["Title"] = "Brands";
}

<div class="container">
    <div class="row row-cols-3">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="col justify-content-center">
                <div class="card shadow-lg mb-5 rounded" style="width:18rem">
                    <img src="@Model[i].PictureUrl" class="card-img-top" style="height:280px;" />
                    <div class="card-body">
                        <p class="card-text">@Model[i].Name</p>
                        <p class="card-text">@Model[i].Origin</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
