@model List<Sale>

@{
    ViewData["Title"] = "Home Page";
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>


<div class="container">
    <div id="carouselControls" class="carousel carousel-dark slide" data-bs-ride="carousel">

        <div class="carousel-inner">
            @foreach (var sale in Model)
            {
                @if (Model.IndexOf(sale) == 0)
                {
                    @:<div class="carousel-item active">
                    @:<div class="row">
                }
                else
                {
                    @:<div class="carousel-item">
                    @:<div class="row">
                }
                                <div class="col justify-content-center">
                                    <div class="card shadow-lg mb-5 rounded" style="width:90%">
                                        <img src="@sale.ImageUrl" class="card-img-top p-2" style="height:220px" />
                                        <div class="card-body">
                                            <p class="card-text nbtext">@sale.Name</p>
                                            <hr>
                                            <samp>
                                                <p class="card-text SaleDisc" style="font-size:14px">@sale.Description</p>
                                                <p class="card-text">@sale.Price$</p>
                                            </samp>
                                            <hr>
                                        </div>
                                    </div>
                                </div>
            }
                        </div>
                        <button class="carousel-control-prev" style="width:50px;" type="button"
                            data-bs-target="#carouselControls" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" style="width:50px;" type="button"
                            data-bs-target="#carouselControls" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>