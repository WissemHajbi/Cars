@model Sale

@{
    ViewData["Title"] = "ADD Sale";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <div class="d-flex justify-content-center text-secondary">
            <h1>ADD</h1>
        </div>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Add">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-2">
                        <label asp-for="Name" class="control-label text-secondary m-2"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Description" class="control-label text-secondary m-2"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Price" class="control-label text-secondary m-2"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Distance" class="control-label text-secondary m-2"></label>
                        <input asp-for="Distance" class="form-control" />
                        <span asp-validation-for="Distance" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="ImageUrl" class="control-label text-secondary m-2"></label>
                        <input asp-for="ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Categories" class="control-label text-secondary m-2"></label>
                        <input asp-for="Categories" class="form-control mb-3" />
                        <span asp-validation-for="Categories" class="text-danger "></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="CarId" class="control-label text-secondary m-2"></label>
                        <input asp-for="CarId" class="form-control mb-3" />
                        <span asp-validation-for="CarId" class="text-danger "></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-outline-success" />
                        <a class="btn btn-outline-secondary m-2" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
