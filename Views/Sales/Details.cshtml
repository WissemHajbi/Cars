@model Sale

@{
    ViewData["Title"] = "Sale";
}

<div class="container">

    <div class="card shadow-lg p-3 mb-5 bg-body rounded" style="width:100%">
        <a asp-controller="Sales" asp-action="Edit" asp-route-id="@Model.Id" class="d-flex justify-content-end">
            <i class="bi bi-pencil-square fs-3 text-dark float-right"></i>
        </a>
        <div class="row d-flex justify-content-center mb-5">
            <img src="@Model.ImageUrl" class="card-img-top" style="height:20rem;width:25rem;margin-top:50px">
        </div>
        <div class="card-body p-3 mt-3">
            <div class="row p-3">
                <div class="col shadow-lg p-3 me-4 bg-body rounded">
                    <p class="card-text"> <span class="nbtext">Name:</span> @Model.Name</p>
                </div>
                <div class="col shadow-lg p-3 me-4 bg-body rounded">
                    <p class="card-text"> <span class="nbtext">Price:</span> @Model.Price</p>
                </div>
                <div class="col shadow-lg p-3 me-4 bg-body rounded">
                    <p class="card-text"> <span class="nbtext">EndDate:</span> @Model.EndDate</p>
                </div>
                <div class="col shadow-lg p-3 me-4 bg-body rounded">
                    <p class="card-text"> <span class="nbtext">Distance:</span> @Model.Distance</p>
                </div>
                <div class="col shadow-lg p-3 me-4 bg-body rounded">
                    <p class="card-text"> <span class="nbtext">Category:</span> @Model.Categories</p>
                </div>
            </div>
            <div class="row p-3">
                <div class="shadow-lg p-3 me-4 bg-body rounded">
                    <p class="card-text"> <span class="nbtext">Description </span>: @Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>
